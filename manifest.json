{
  "name": "Wulfie Assistant",
  "description": "This extension provides warnings on certain sites for when the VPN is running.",
  "version": "0.1.0",
  "manifest_version": 3,
  "icons": {
    "16": "./img/16x16.png",
    "32": "./img/32x32.png",
    "48": "./img/48x48.png",
    "128": "./img/128x128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Wulfie Assistant"
  },
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "storage",
    "desktopCapture",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "desktopCapture.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}